<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    tools:context="com.contacts.app.fragment.CreateNewContactFragment">

    <TextView
        android:id="@+id/tv_new_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="First Name:"
        app:layout_constraintBottom_toTopOf="@+id/et_new_first_name"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_new_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="30dp"
        android:hint="Enter contact first name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tv_new_last_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_new_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Last Name:"
        app:layout_constraintBottom_toTopOf="@+id/et_new_last_name"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_new_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="30dp"
        android:hint="Enter contact last name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tv_new_phone_num"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_new_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Phone Number:"
        app:layout_constraintBottom_toTopOf="@+id/et_new_phone_num"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_new_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="350dp"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_new_phone_num" />
</androidx.constraintlayout.widget.ConstraintLayout>